<fluent:RibbonGroupBox
    x:Class="Atc.Azure.IoT.Wpf.App.RibbonParts.RibbonGroupAzure"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="urn:fluent-ribbon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Atc.Azure.IoT.Wpf.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:AzureTenantSelectionViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="800"
    Header="Azure"
    mc:Ignorable="d">

    <fluent:Button
        Width="50"
        Margin="10,0"
        Command="{Binding Path=SignInToAzureCommand}"
        Header="Sign In"
        LargeIcon="pack://application:,,,/Atc.Azure.IoT.Wpf.App;component/Resources/Images/32/AzureSignIn.png" />

</fluent:RibbonGroupBox>