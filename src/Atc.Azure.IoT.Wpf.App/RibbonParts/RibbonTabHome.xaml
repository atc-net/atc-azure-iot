<fluent:RibbonTabItem
    x:Class="Atc.Azure.IoT.Wpf.App.RibbonParts.RibbonTabHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:Atc.Azure.IoT.Wpf.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="urn:fluent-ribbon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ribbonParts="clr-namespace:Atc.Azure.IoT.Wpf.App.RibbonParts"
    d:DesignHeight="100"
    d:DesignWidth="800"
    Header="Home"
    KeyTip="H"
    Tag="{x:Static app:ContextViewMode.TenantSelection}"
    mc:Ignorable="d">

    <ribbonParts:RibbonGroupAzure DataContext="{Binding Path=.}" />
    <ribbonParts:RibbonGroupTenant DataContext="{Binding Path=.}" IsEnabled="{Binding Path=IsAuthorizedToAzure}" />

</fluent:RibbonTabItem>