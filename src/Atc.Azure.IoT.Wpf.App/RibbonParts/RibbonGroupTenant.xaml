<fluent:RibbonGroupBox
    x:Class="Atc.Azure.IoT.Wpf.App.RibbonParts.RibbonGroupTenant"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="urn:fluent-ribbon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Atc.Azure.IoT.Wpf.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:AzureTenantSelectionViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="800"
    Header="Tenant"
    mc:Ignorable="d">

    <fluent:ComboBox
        Width="250"
        Margin="0,0,10,0"
        DisplayMemberPath="Value"
        IsEditable="False"
        ItemsSource="{Binding Path=Tenants}"
        SelectedItem="{Binding Path=SelectedTenant}">
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="SelectionChanged">
                <b:InvokeCommandAction Command="{Binding Path=OnTenantSelectionChangedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type fluent:ComboBox}}, Path=SelectedItem}" />
            </b:EventTrigger>
        </b:Interaction.Triggers>
    </fluent:ComboBox>

</fluent:RibbonGroupBox>